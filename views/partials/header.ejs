<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Let's do Korean</title>
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/imgs/favicon-32x32.png"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:ital,wght@0,300;0,400;0,700;0,900;1,200;1,400&family=Source+Serif+4:opsz,wght@8..60,400;8..60,700&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header>
      <nav class="containerNav">
        <div class="headerItemContainer">
        <div class="navBtnContainer">
        <ul class="quickNavBtns">
          <li><a href="/sections">Study</a></li>
          <li><a href="/profile">Profile</a></li>
        </ul>
        </div>
        <div class="headerUser">
         <p class="navUsername"><%= user.userName %></p>
         <div class="navBtn">
          <div class="caret cursorPointer">
           &#9660
          </div>
         <img class="profileAvatar cursorPointer" src="imgs/koreanflag.jpg">
        </div>
         <div class="navModalDropdown hide">
          <ul class="dropdownUl">
            <li><i>Signed in as</i></li>
            <li class="navHiddenUserName"><strong><%- user.userName %></strong><br/></li>
            <li>Stages complete: <%= user.stage %></li>
            <li>Points: <%= user.points %></li>
            <li class="recentResult">Recent result</li>
            <% if(results.length > 0){ %>
            <li><%= review[0].sections[review[0].sections.length-1] %>: <%= results[results.length-1].score %>%</li>
            <% } else{ %>
              <li>No Result</li>
              <% } %>
            <li class="navModalLogout"><a href="/logout">Logout</a></li>
          </ul>
         </div>
        </div>
      </div>
    </nav>
    </header>
  </body>
  <script>
    
    const navBtn = document.querySelector('.navBtn')
    const dropDown = document.querySelector('.navModalDropdown')
    const caret = document.querySelector(".caret")
    const image = document.querySelector(".profileAvatar")

    navBtn.addEventListener('click', () => {
      dropDown.classList.contains('hide') ? dropDown.classList.remove('hide') : dropDown.classList.add('hide');
      caret.classList.contains("flipArrow") ? caret.classList.remove("flipArrow") : caret.classList.add("flipArrow");
    })

      let addImg = "../"
      let increase = image.src.split("/").length-4;
      image.src = addImg.repeat(increase) + "imgs/koreanflag.jpg";
  </script>
</html>
